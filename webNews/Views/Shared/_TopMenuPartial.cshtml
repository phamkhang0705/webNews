                <li class="@(route.Values["Controller"].ToString() == "News" && (route.Values["Action"].ToString() == "News"
                                || route.Values["Action"].ToString() == "NewsDetail") ? "sale-noti" : "")">
                    <a href="@Url.Action("News", "News")">Tin tức</a>
