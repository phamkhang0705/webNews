                <li class="@(route.Values["Controller"].ToString() == "News" && (route.Values["Action"].ToString() == "Index"
                                                                                 || route.Values["Action"].ToString() == "Detail") ? "sale-noti" : "")">
                    <a href="@Url.Action("Index", "News")">Gói sự kiện</a>
                </li>

                <li class="@(route.Values["Controller"].ToString() == "Home" && route.Values["Action"].ToString() == "ForCustomer" ? "sale-noti" : "")">
