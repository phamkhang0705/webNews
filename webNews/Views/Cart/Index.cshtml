@model List<webNews.Common.Common.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Cart -->
<section class="cart bgwhite p-b-100">
    <div class="container">
        <!-- breadcrumb -->
        <div class="bread-crumb bgwhite flex-w p-r-15 p-b-30 p-l-15-sm">
            <a href="@Url.Action("Index", "Home")" clas class="s-text13">
                Trang chủ
                <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
            </a>
            <a href="@Url.Action("Index", "Cart")" clas class="s-text13">
                Giỏ hàng
                <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
            </a>
        </div>
        @if (Model.Count > 0)
        {
            <!-- Cart item -->
            <div class="container-table-cart pos-relative">
                <div class="wrap-table-shopping-cart bgwhite">
                    <table class="table-shopping-cart">
                        <tr class="table-head">
                            <th class="column-4">Ảnh sản phẩm</th>
                            <th class="column-2">Tên sản phẩm</th>
                            <th class="column-2">Số lượng</th>
                            <th class="column-2">Xóa sản phẩm</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr class="table-row">
                                <td class="column-4">
                                    <div class="cart-img-product b-rad-4 o-f-hidden" style="width: 75% !important; margin-left: 20px">
                                        <img src="@Url.Content("~/Content/Cate/" + Path.GetFileName(item.Category.Avatar))" alt="@item.Category.Name">
                                    </div>
                                </td>
                                <td class="column-2">@item.Category.Name</td>
                                <td class="column-2">@item.Quantity</td>
                                <td class="column-2"><a href="javascript:" data-id="@item.Category.Id" class="btn-delete">Xoá</a></td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="flex-w flex-sb-m p-t-25 p-b-25 bo8 p-l-35 p-r-60 p-lr-15-sm">
                    <div class="flex-w flex-m w-full-sm">
                    </div>
                    <div class="size10 trans-0-4 m-t-10 m-b-10">
                        <!-- Button -->
                        <a href="@Url.Action("CheckOut", "Cart")" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                            Đặt hàng
                        </a>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center">
                <img src="~/Theme/front-end/images/emptycart.gif" width="200" />
                <p>Bạn chưa chọn sản phẩm cho giỏ hàng</p>
                <p>
                    Vui lòng chọn sản phẩm để tiếp tục mua hàng!
                </p>
                <div style="margin-top: 20px">
                    <a href="#" onclick="history.go(-1);return false;"><i class="fa fa-angle-double-left"></i>Quay lại trang trước</a>
                    <a href="@Url.Action("Index", "Home")" style="margin-left: 20px"><i class="fa fa-home"></i> Quay lại trang chủ</a>
                </div>

            </div>
        }
    </div>
</section>