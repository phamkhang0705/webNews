@section Scripts
{
    <script src="~/Scripts/lazyload.min.js"></script>
    <script src="~/Theme/front-end/js/slick-custom.js"></script>
    <script>
        $(document).ready(function () {
            $.ajax({
                url: '/Home/ListSlides',
                type: "Post",
                data: {
                    type: 1
                },
                async: true,
                success: function (rs) {
                    $('#list_slides').html(rs);
                    $("img.lazy-loading").lazyload({
                        effect: "fadeIn"
                    });
                },
                error: function (e) {
                }
            });
            $.ajax({
                url: '/Home/ListSlides',
                type: "Post",
                data: {
                    type: 2
                },
                async: true,
                success: function (rs) {
                    $('#list_banners').html(rs);
                    $("img.lazy-loading").lazyload({
                        effect: "fadeIn"
                    });
                },
                error: function (e) {
                }
            });
        });
    </script>
}
