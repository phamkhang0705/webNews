@model webNews.Domain.Entities.Vw_News
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    // var url = Request.Url.ToString();
}

<!-- News Detail -->
<div class="container bgwhite p-b-80">
    <!-- breadcrumb -->
    <div class="bread-crumb bgwhite flex-w p-r-15 p-b-30 p-l-15-sm">
        <a href="@Url.Action("Index", "Home")" clas class="s-text13">
            Trang chủ
            <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
        </a>
        <a href="@Url.Action("Index", "News")" clas class="s-text13">
            Gói sự kiện
            <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
        </a>

        <span class="s-text13">
            @Model.Title
        </span>
    </div>
    <div class="flex-w flex-sb">
        <img data-src="@Model.Image" width="100%" height="100%" class="lazy-loading"/>
        <div class="clearfix"></div>
    </div>
    <div class="flex-w flex-sb">
        @Html.Raw(Model.Description)
    </div>
</div>
