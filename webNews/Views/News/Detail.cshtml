@using webNews.Domain.Entities
@model webNews.Domain.Entities.Vw_News
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Vw_News> relatedsList = ViewBag.RelatedNews;
}

<!-- content page -->
    <section class="container news-container content-detail bgwhite p-b-25">
        <div class="bread-crumb bgwhite flex-w p-r-15 p-b-30 p-l-15-sm">
            <a href="@Url.Action("Index", "Home")" clas class="s-text13">
                Trang chủ
                <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
            </a>
            <a href="@Url.Action("Index", "News")" clas class="s-text13">
                Gói sự kiện
                <i class="fa fa-angle-right m-l-8 m-r-9" aria-hidden="true"></i>
            </a>

            <span class="s-text13">
                @Model.Title
            </span>
        </div>

        <div class="row">
            <div class="col-md-8 col-lg-8 col-sm-12 col-xs-12 p-b-0 p-r-5 b-r-3">
                <div class="p-r-10 p-r-0-lg">
                    <div class="p-b-40">
                        @if (!string.IsNullOrEmpty(@Model.Image))
                        {
                            <div class="blog-detail-img wrap-pic-w">
                                <img data-src="@Model.Image" alt="@Model.ShortName" class="lazy-loading">
                                <p class="image-comment">@Model.ImageComment</p>
                            </div>
                        }
                        <div class="blog-detail-txt p-t-33 width-100">
                            <h4 class="blog-detail-txt p-t-33">
                                @Model.Title
                            </h4>

                            <div class="s-text8 flex-w flex-m p-b-21 p-t-5">
                                <span>
                                    @Model.CreatedDate
                                </span>
                            </div>
                            <div class="blog-detail-txt newscontent">@Html.Raw(Model.Content)</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-lg-4  col-sm-12 col-xs-12 p-b-80 p-l-15 p-r-0">
                <div class="rightbar">
                    <!-- Related news -->
                    <h4 class="m-text23 p-b-0 text-uppercase font-inherit">
                        Bài viết liên quan
                    </h4>
                    <hr class="hr" />
                    <ul class="bgwhite">
                        @if (relatedsList.Count > 0)
                        {
                            foreach (var item in relatedsList)
                            {
                                <li class="flex-w p-b-10">
                                    <div class="w-size19">
                                        <a href="@Url.Action("Detail", "News", new {@news_short_name = item.ShortName})" class="dis-block wrap-pic-w m-r-8 m-t-5 trans-0-4 hov4">
                                            <img data-src="@item.Image" alt="@item.ShortName" class="lazy-loading">
                                        </a>
                                    </div>
                                    <div class="w-size20">
                                        <a href="@Url.Action("Detail", "News", new {@news_short_name = item.ShortName})" class="s-text19">
                                            @item.Title
                                        </a>
                                    </div>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="flex-w p-b-10">
                                <div class="w-size23 p-t-5">
                                    Không có bài viết nào
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>

