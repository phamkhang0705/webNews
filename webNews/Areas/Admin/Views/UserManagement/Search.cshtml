@using webNews.Language.Language
@using webNews.Models

<div class="modal fade popup-search" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="xSearchModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">@Resource.Search_Lang</h4>
            </div>
            <form id="formSearch" class="form-horizontal">
                <div class="modal-body clearfix">
                    <div class="col-md-12 col-ms-12">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-xs-4 control-label">Tên tài khoản</label>
                                <div class="col-xs-8">
                                    <input type="text" placeholder="Tên tài khoản" class="form-control" id="txtSearchUserName" />
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-xs-4 control-label">Số điện thoại</label>
                                <div class="col-xs-8">
                                    <input type="text"  placeholder="Số điện thoại" class="form-control" id="txtSearchTel" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-ms-12">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-xs-4 control-label">Chi nhánh</label>
                                <div class="col-xs-8">
                                    <select id="txtSearchBranch" class="form-control">
                                        <option value="-1">Tất cả</option>
                                        @if ((List<SelectListModel>)ViewBag.ListBranch != null)
                                        {
                                            foreach (SelectListModel item in (List<SelectListModel>)ViewBag.ListBranch)
                                            {
                                                <option value="@item.Text">@item.Name</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-xs-4 control-label">Loại tài khoản</label>
                                <div class="col-xs-8">
                                    <select id="txtSearchRole" class="form-control">
                                        <option value="-1">Tất cả</option>
                                        <option value="1">Admin</option>
                                        <option value="2">Kế toán</option>
                                        <option value="3">Quản lý chi nhánh</option>
                                        <option value="4">Nhân viên tư vấn</option>
                                        <option value="5">Nhân viên kinh doanh</option>
                                        <option value="6">Giáo viên</option>
                                        <option value="7">Học viên</option>
                                        <option value="8">Kế toán trưởng</option>
                                        <option value="9">Giám đốc tài chính</option>
                                        <option value="10">Thủ quỹ</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-ms-12">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="col-xs-4 control-label">Trạng thái</label>
                                <div class="col-xs-8">
                                    <select id="txtStatus" class="form-control">
                                        <option value="-1">Tất cả</option>
                                        <option value="1">Hoạt động</option>
                                        <option value="0">Tài khoản khóa</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>

                <div class="modal-footer">
                    <button id="btnSearchSubmit" class="btn btn-primary" type="button"><i class="fa fa-search"></i>@(Resource.Btn_Search)</button>
                    <button id="btnSearchRefresh" class="btn btn-primary hidden" type="button"><i class="fa fa-refresh"></i> @(Resource.Btn_Reset_Lang)</button>
                    <button type="button" class="btn " data-dismiss="modal"><i class=" fa fa-reply"></i> @(Resource.Btn_Close_Lang)</button>
                </div>
            </form>
        </div>
    </div>
</div>