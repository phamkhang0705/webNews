@using webNews.Domain
@using webNews.Language.Language
@using webNews.Domain.Entities;

<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="xModal">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@Resource.Search_Lang</h4>
            </div>
            <div class="modal-body clearfix">
                <form id="formSearch" name="formSearch" class="form-horizontal" method="post" accept-charset="utf-8">
                    <div class="form-group hidden">
                        <label class="col-xs-2 control-label"></label>
                        <div class="col-xs-4">
                            <div class="input-group" id="sFromDate">
                                <input type="text" placeholder="" class="form-control datemask" name="sFromDate">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                        <label class="col-xs-2 control-label"></label>
                        <div class="col-xs-4">
                            <div class="input-group" id="sToDate">
                                <input type="text" placeholder="" class="form-control datemask" name="sToDate">
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2 control-label">Mã danh mục</label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control input-sm" name="Code" id="txtCode"/>
                        </div>
                        <label class="col-xs-2 control-label">Tên danh mục</label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control input-sm" name="Name" id="txtName"/>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-xs-2 control-label">Từ tuổi</label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control input-sm" name="FromAge" id="txtFromAge" />
                        </div>
                        <label class="col-xs-2 control-label">Đến tuổi</label>
                        <div class="col-xs-4">
                            <input type="text" class="form-control input-sm" name="ToAge" id="txtToAge" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-xs-2 control-label">Nhóm</label>
                        <div class="col-xs-4">
                            <select class="form-control input-sm" name="GroupId" id="txtGroupId" multiple="multiple">
@*                                <option value="-1">Tất cả</option>*@
                                @foreach (Group item in Model.ListGroups)
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>

                        <label class="col-xs-2 control-label">Trạng thái</label>
                        <div class="col-xs-4">
                            <select class="form-control input-sm" name="Status" id="txtStatus">
                                @foreach (SelectListItem item in Model.ListStatus)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button id="btnSearchSubmit" class="btn btn-primary" type="button"><i class="fa fa-search"></i>@(Resource.Search_Lang)</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal"><i class="fa fa-reply"></i>@Resource.Btn_Close_Lang</button>
            </div>
        </div>
    </div>
</div>